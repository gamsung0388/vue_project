<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.demo.board.BoardMapper">
  	<insert id="boardinsert" parameterType="BoardDTO">
  		<selectKey resultType="int" keyProperty="boardNum" order="BEFORE">
	        SELECT IFNULL(MAX(BOARD_NUM+1),1) FROM BOARD        
	    </selectKey>  
  		INSERT BOARD(
			BOARD_NUM
		    ,BOARD_TITLE
		    ,BOARD_TXT
		    ,BOARD_TAG
		    ,USER_ID
		    )VALUES(
				#{boardNum},
		        #{boardTitle},
		        #{boardTxt},
		        #{boardTag},
		        #{userId}
			);
  	</insert>
  	<update id="boardupdate" parameterType="BoardDTO">
  		UPDATE BOARD
		SET	BOARD_TITLE = #{boardTitle}
		 	,BOARD_TXT = #{boardTxt}
			,BOARD_TAG = #{boardTag}
			,UDATE_USER_ID = #{userId}
			,BOARD_UDT = #{boardUdt}
		WHERE BOARD_NUM= #{boardNum};
  	</update>
  	<delete id="boarddelete" parameterType="int">
  		DELETE FROM BOARD
  		WHERE BOARD_NUM= #{boardNum};
  	</delete>  	
	<select id="boardselect" resultType="BoardDTO">
		SELECT BOARD_NUM
			,BOARD_TITLE
		    ,BOARD_TXT
		    ,BOARD_TAG
		    ,BOARD_VIEWCNT
		    ,USER_ID
		    ,UDATE_USER_ID
		    ,BOARD_DATE
		    ,BOARD_UDT
		FROM BOARD
		ORDER BY BOARD_NUM DESC;
	</select>
	
	<select id="boardOne" parameterType="int" resultType="BoardDTO">
		SELECT BOARD_NUM
			,BOARD_TITLE
		    ,BOARD_TXT
		    ,BOARD_TAG
		    ,BOARD_VIEWCNT
		    ,USER_ID
		    ,UDATE_USER_ID
		    ,BOARD_DATE
		    ,BOARD_UDT
		FROM BOARD
		WHERE BOARD_NUM= #{boardNum} ;
	</select>
</mapper>  